{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "command": "dotnet",
            "type": "process",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "args": [
                "build",
                "${workspaceFolder}/xFunc.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/xFunc.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Test",
            "command": "dotnet",
            "type": "process",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "args": [
                "test",
                "${workspaceFolder}/xFunc.sln",
                "-c:${input:configurationType}",
                "--collect:\"XPlat Code Coverage\"",
                "--settings",
                "runsettings.xml"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Code Coverage",
            "group": "test",
            "command": "dotnet",
            "type": "process",
            "args": [
                "msbuild",
                "${workspaceFolder}/xFunc.sln",
                "-p:Configuration=${input:configurationType}",
                "-target:\"xFunc_Tests:GenerateHtmlCoverageReport\""
            ],
            "problemMatcher": "$msCompile",
            "dependsOn": ["Test"]
        }
    ],
    "inputs": [
        {
            "id": "configurationType",
            "description": "Please, select configuration type from list.",
            "type": "pickString",
            "options": [
                "Debug",
                "Release"
            ],
            "default": "Release"
        }
    ]
}